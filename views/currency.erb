<h1>Convert <%= @currency %></h1>

<div>
  <p>
    Go <a href="/">back</a>.
  </p>
</div>

<ul>
  <% @symbols.each do |symbol| %>
    <% country = symbol.at(0) %>
    <li>
      <a href="/<%= @currency %>/<%= country %>"><%= "Convert 1 #{@currency} to #{country}..." %></a>
    </li>
  <% end %>
</ul>
